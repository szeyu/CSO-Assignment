TrafficLight                                                                                                            PAGE 1
                         1             ORG     00H
0000 0102                2             AJMP    MAIN
                         3
0002 7400                4     MAIN:   MOV     A,#00H
0004 F590                5             MOV     P1,A    ; Set Port 1 as output for Green Light and Red Light
                         6
0006 7400                7             MOV     A,#00H
0008 F5A0                8             MOV     P2,A    ; Set Port 2 as output for Yellow Light
                         9
000A 7400               10             MOV     A,#00H  ; RED,GREEN
000C F9                 11             MOV     R1,A    ; Set R1 initial state to 000 state
                        12                             ; There will be 8 state in R1 from 000 to 111
                        13                             ; Will be decoded to TRAFFIC signal
                        14
000D 74F7               15             MOV     A,#0F7H ; YELLOW
000F FA                 16             MOV     R2,A    ; Set R2 initial state to 0111 state
                        17                             ; There will be 4 state in R2
                        18                             ; Sequence:
                        19                             ; 0111 => 1011 => 1101 => 1110 => 0111
                        20                             ; Will be updated using Rotator function
                        21
0010 900054             22             MOV     DPTR,#TRAFFIC   ; Data pointer for Traffic signal
                        23
0013 75F0FF             24     START:  MOV     B,#0FFH
0016 85F0A0             25             MOV     P2,B            ; Clear Yellow Light output
                        26
0019 1125               27             ACALL   UPDATE_TRAFFIC  ; Green Light and Red Light Signal
                        28
                        29             ;ACALL  DELAY           ; Delay for Green Light and Red Light
                        30
001B 112A               31             ACALL   UPDATE_R1       ; ACALL UPDATE_R1 for next Traffic
001D 1125               32             ACALL   UPDATE_TRAFFIC  ; Off Green Light, and be ready for Yellow Signal
                        33
001F 1131               34             ACALL   ROTATE_R2       ; Call Yellow Light
                        35
                        36             ;ACALL  COUNTDOWN       ; Count down and Yellow Signal
                        37
0021 112A               38             ACALL   UPDATE_R1       ; ACALL UPDATE_R1 for next Traffic
                        39
0023 0113               40             AJMP    START
                        41
                        42     UPDATE_TRAFFIC: ; Function to update and output Traffic signal
0025 E9                 43                     MOV     A,R1            ; Selector input for decoder
0026 93                 44                     MOVC    A,@A+DPTR       ; Decode to Traffic signal
0027 F590               45                     MOV     P1,A            ; Green Light Signal
0029 22                 46                     RET
                        47
                        48     UPDATE_R1:      ; Function to update R1
002A E9                 49                     MOV     A,R1
002B 04                 50                     INC     A                       ; Keep adding R1 by 1
002C 20E30F             51                     JB      A.3,UPDATE_R1_END       ; Change back to 000 state if become 1000
002F F9                 52                     MOV     R1, A                   ; Update the value of R1
0030 22                 53                     RET
                        54
                        55
                        56     ROTATE_R2:      ; Function to update R2
                        57                     ; Follow the sequence: ROTATE RIGHT of '1', to let the '0' move
0031 EA                 58                     MOV     A,R2
0032 F5A0               59                     MOV     P2,A
0034 03                 60                     RR      A ; 0111 => 1011 => 1101 => 1110 => 0111
0035 30A002             61                     JNB     P2.0,UPDATE_R2_END;
0038 FA                 62                     MOV     R2,A
0039 22                 63                     RET
                        64
                        65                     ; Function to wrap around yellow light
003A 74F7               66     UPDATE_R2_END:  MOV     A,#0F7H ; Wrap around 0111 => 1110
003C FA                 67                     MOV     R2, A   ; Update the value of R2
003D 22                 68                     RET
                        69
                        70                     ; Function to wrap around R&G light
003E 7400               71     UPDATE_R1_END:  MOV     A,#00H  ; Wrap around 0-7 of A
0040 F9                 72                     MOV     R1, A   ; Update the value of R1
0041 22                 73                     RET
                        74
                        75                     ; Function to delay for Green Light and Red Light
0042 78FF               76     DELAY:          MOV     R0,#0FFh
0044 79F0               77     DELAY1:         MOV     R1,#0F0h
0046 D9FE               78     DELAY2:         DJNZ    R1,DELAY2 ;Decrement register1 and jump to delay2 if it is not 0
0048 D8FA               79                     DJNZ    R0,DELAY1 ;Decrement register0 and jump to delay1 if it is not 0
004A 22                 80                     RET
                        81
                        82                     ; Function to countdown for Yellow Light (Act as Delay)
004B 7BFF               83     COUNTDOWN:      MOV     R3,#0FFh
004D 7CF0               84     COUNTDOWN1:     MOV     R4,#0F0h
004F DCFE               85     COUNTDOWN2:     DJNZ    R4,COUNTDOWN2
0051 DBFA               86                     DJNZ    R3,COUNTDOWN1
0053 22                 87                     RET
                        88
                        89             ; Decoder to Green Light and Red Light Display for 4 Traffic
                        90             ; G1R1 G2R2 G3R3 G4R4
                        91             ; 0 means output
                        92             ; 1 means no output
                        93
                        94             ; Traffic 1
                        95             ; 01 10 10 10 => 6AH    G1 is turned on while other R keep turned on
                        96             ; 11 10 10 10 => 0EAH   G1 is turned off for Y while other R keep turned on
                        97
                        98             ; Traffic 2
                        99             ; 10 01 10 10 => 9AH    G2 is turned on while other R keep turned on
                       100             ; 10 11 10 10 => 0BAH   G2 is turned off for Y while other R keep turned on
                       101
                       102             ; Traffic 3
                       103             ; 10 10 01 10 => 0A6H   G3 is turned on while other R keep turned on
                       104             ; 10 10 11 10 => 0AEH   G3 is turned off for Y while other R keep turned on
                       105
                       106             ; Traffic 4
                       107             ; 10 10 10 01 => 0A9H   G4 is turned on while other R keep turned on
                       108             ; 10 10 10 11 => 0ABH   G4 is turned off for Y while other R keep turned on
                       109
0054 6AEA9ABAA6        110     TRAFFIC:        DB      6AH,0EAH,9AH,0BAH,0A6H,0AEH,0A9H,0ABH
     AEA9AB
                       111                     END
